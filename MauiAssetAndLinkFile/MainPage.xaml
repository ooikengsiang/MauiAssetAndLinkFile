<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAssetAndLinkFile.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Hello, World!"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Is Asset File (AboutAssets.txt) Found?"
                FontSize="18"
                HorizontalOptions="Center" />

            <Label
                x:Name="AboutAssetsResultLabel"
                FontSize="18"
                HorizontalOptions="Center" />

            <Label
                Text="Is Asset File (DontReadMe.txt) Found?"
                FontSize="18"
                HorizontalOptions="Center" />

            <Label
                x:Name="DontReadMeResultLabel"
                FontSize="18"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

